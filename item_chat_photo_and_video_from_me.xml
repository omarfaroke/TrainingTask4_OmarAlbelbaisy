<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_message_chat_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/balloon_outgoing_normal"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:padding="10dp">


        <ImageView
            android:id="@+id/imageView_chat_photo"
            android:layout_width="200dp"
            android:layout_height="350dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/play_button_with_background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_time_message_chat"
                style="@style/TimeMessageTextChatAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="18 seconds ago, 7:55 AM " />

            <ImageView
                android:id="@+id/imageView_state_message_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/msg_status_gray_waiting" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
