<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/layout_message_chat_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/balloon_outgoing_normal"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="right">


        <TextView
            android:id="@+id/textView_message_chat"
            style="@style/MessageTextChatAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="how are you ? yfuyfykfjk" />

        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView_time_message_chat"
                style="@style/TimeMessageTextChatAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="18 seconds ago, 7:55 AM "
                />

            <ImageView
                android:id="@+id/imageView_state_message_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/msg_status_gray_waiting"
                android:layout_marginRight="5dp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
